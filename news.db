import sqlite

CREATE TABLE groups (
    id INTEGER PRIMARY KEY,
    name TEXT
);

CREATE TABLE subscriptions (
    id INTEGER PRIMARY KEY,
    chat_id INTEGER,
    group_id INTEGER,
    FOREIGN KEY(group_id) REFERENCES groups(id)
);

CREATE TABLE news (
    id INTEGER PRIMARY KEY,
    group_id INTEGER,
    title TEXT,
    link TEXT,
    date TEXT,
    FOREIGN KEY(group_id) REFERENCES groups(id)
);
